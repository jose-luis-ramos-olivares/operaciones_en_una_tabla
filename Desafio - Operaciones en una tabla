CREATE DATABASE posts;
CREATE TABLE post(id SERIAL, usuario VARCHAR(25), fecha_de_creacion DATE, contenido VARCHAR, descripcion VARCHAR, PRIMARY KEY (id));
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion) VALUES ('Pamela', '20-07-20', 'Pamela ha sido creada', 'Creacion Pamela');
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion) VALUES ('Pamela', '19-07-20', 'Pamela ha sido creada', 'Creacion Pamela 2');
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion) VALUES ('Carlos', '20-07-20', 'Carlos ha sido creado', 'Creacion Carlos');
ALTER TABLE post ADD titulo VARCHAR(25);
UPDATE post SET titulo = 'PAM' WHERE id = 1;
UPDATE post SET titulo = 'PAM' WHERE id = 2;
UPDATE post SET titulo = 'CAR' WHERE id = 3;
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion, titulo) VALUES ('Pedro', '20-07-20', 'Pedro ha sido creado', 'Creacion Pedro', 'PED');
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion, titulo) VALUES ('Pedro', '19-07-20', 'Pedro ha sido creado', 'Creacion Pedro 2', 'PED');
DELETE FROM post WHERE id = 3;
INSERT INTO post (usuario, fecha_de_creacion, contenido, descripcion, titulo) VALUES ('Carlos', '22-07-20', 'Carlos ha sido creado', 'Creacion Carlos', 'CAR');
CREATE TABLE comentarios(id SERIAL, fecha_hora_creacion TIMESTAMP, contenido VARCHAR, id_post INT, PRIMARY KEY (id), FOREIGN KEY (id_post) REFERENCES post(id));
